{{>layouts/header}}

<form action="/forum/create" method="post">
<!--    로그인한 유저라면 본인의 닉네임을, 비회원이라면 닉네임을 입력가능하게 함.-->
    {{#user}}
    <div class="mb-3">
        <label class="form-label">nickname</label>
        <input type="text" class="form-control w-25" name="nickname" placeholder="nickname" value="{{nickname}}" readonly>
        <input type="hidden" name="isAnonymous" value="false">
    </div>
    {{/user}}
    {{^user}}
        <div class="mb-3">
            <label class="form-label">nickname</label>
            <input type="text" class="form-control w-25" name="nickname" placeholder="nickname">
            <input type="password" class="form-control w-25" name="password" placeholder="password">
            <input type="hidden" name="isAnonymous" value="true">

        </div>
    {{/user}}
    <div class="mb-3">
        <label class="form-label">title</label>
        <input type="text" class="form-control" name="title" placeholder="title">
    </div>
    <div class="mb-3">
        <label class="form-label">content</label>
        <textarea class="form-control" name="content" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">save</button>
</form>


{{>layouts/footer}}